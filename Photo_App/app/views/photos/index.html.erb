<h1>Photos</h1>
 <%# Prints a message when a file is uploaded or deleted %>
<% if !flash[:notice].blank? %>
	<div class = "alert alert-info">
		<%= flash[:notice] %>
	</div>
<% end %>

<br />


<br />
         <%# Photo table. Class specified by bootstrap gem %>
<table class = "table table-bordered table striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Image</th>
			<th>Download Link</th>
			<th></th>
		</tr>
	</thead>

	<tbody> <%# Fills the table from the photo database %>
		<% @photos.each do |photo| %>

			<tr>
				<td><%= photo.name %></td>
				<td><%= photo.attachment_url %></td>
				<td><%= link_to "Download Photo", photo.attachment_url %></td>
				<td><%= button_to "Delete", photo, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{photo.name}?" %></td>
			</tr>

		<% end %>
	</tbody>

</table>

<br /> <%# Goes to page to upload photos%>
<%= link_to "New Photo", new_photo_path, class: "btn btn-primary" %>

<br />